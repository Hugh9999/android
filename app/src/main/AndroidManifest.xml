<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tvuniverse.tv">

    <uses-feature
        android:name="android.software.leanback"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:banner="@drawable/banner"
        android:icon="@drawable/img_1280_720"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/TVUniverse"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".activity.SeriesActivity"
            android:exported="false" />
        <activity
            android:name=".activity.CountdownActivity"
            android:exported="false" />
        <activity
            android:name=".activity.LiveEventActivity"
            android:exported="false" />
        <activity
            android:name=".activity.PlayerActivity"
            android:exported="false" />
        <activity
            android:name=".activity.HomeActivity"
            android:exported="false" />
        <activity
            android:name=".activity.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>